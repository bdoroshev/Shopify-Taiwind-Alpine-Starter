<form action="{{ routes.search_url }}" method="get" role="search" class="search">
	<div class="field relative flex items-center">
		<input class="input w-full min-w-[250px] bg-transparent placeholder:text-white/90"
			type="search"
			id="nav-search-input"
			name="q"
			value="{{ search.terms | escape }}"
			placeholder="Search"
			required
		>

		<label class="field__label sr-only" for="nav-search-input">Search</label>
		<input name="options[prefix]" type="hidden" value="last">
		<button class="absolute right-1" aria-label="Search">
			{% render 'icon-search' class: class %}
		</button>

	</div>
</form>